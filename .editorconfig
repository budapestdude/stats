# EditorConfig helps maintain consistent coding styles across different editors
# https://editorconfig.org

root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# JavaScript/TypeScript
[*.{js,jsx,ts,tsx}]
indent_size = 2
quote_type = single

# JSON
[*.json]
indent_size = 2

# YAML
[*.{yml,yaml}]
indent_size = 2

# Markdown
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# Batch files (Windows)
[*.{bat,cmd}]
end_of_line = crlf

# PowerShell
[*.ps1]
end_of_line = crlf

# Shell scripts
[*.sh]
end_of_line = lf

# Package files
[{package.json,package-lock.json}]
indent_size = 2

# TypeScript config
[tsconfig.json]
indent_size = 2

# Docker files
[Dockerfile*]
indent_size = 2

[docker-compose*.yml]
indent_size = 2

# SQL
[*.sql]
indent_size = 2

# HTML
[*.html]
indent_size = 2

# CSS/SCSS
[*.{css,scss,sass}]
indent_size = 2
