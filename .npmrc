# npm configuration for Chess Stats

# Use exact versions when installing packages
save-exact=true

# Automatically save dependencies with --save
save=true

# Set log level (error, warn, info, verbose, silly)
loglevel=warn

# Cache directory
# cache=~/.npm

# Prefer offline mode (speed up installs)
prefer-offline=true

# Disable package-lock.json automatic updates during install
# package-lock=false

# Engine strict mode - fail if Node.js version doesn't match
engine-strict=true

# Production flag shorthand
# production=false

# Legacy peer deps (use if having peer dependency conflicts)
# legacy-peer-deps=true

# Optional: Configure registry (uncomment if using private registry)
# registry=https://registry.npmjs.org/

# Optional: Audit level
audit-level=moderate

# Optional: Progress indicator
# progress=true
